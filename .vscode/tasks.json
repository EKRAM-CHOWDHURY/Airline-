{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "mkbuild",
      "type": "shell",
      "command": "cmd",
      "args": ["/c", "if not exist build mkdir build"]
    },
    {
      "label": "build",
      "type": "shell",
      "command": "g++",
      "args": [
        "-g",
        "-std=c++17",          
        "src/main.cpp",
        "-o",
        "build/airline.exe"
      ],
      "options": { "cwd": "${workspaceFolder}" },
      "group": { "kind": "build", "isDefault": true },
      "problemMatcher": ["$gcc"],
      "dependsOn": "mkbuild"
    }
  ]
}

